{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "main",
            "apiVersion": "2017-06-01",
            "location": "{{ azure_location }}",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.100.0.0/16",
                        "172.17.1.0/24"
                    ]
                },
                "subnets": [
                    {
                        "name": "mtr1subnet",
                        "properties": {
                            "addressPrefix": "172.17.1.0/24"
                        }
                    },
                    {
                        "name": "app1subnet",
                        "properties": {
                            "addressPrefix": "10.100.1.0/24"
                        }
                    },
                    {
                        "name": "mgmt1subnet",
                        "properties": {
                            "addressPrefix": "10.100.100.0/24"
                        }
                    },
                    {
                        "name": "svc1subnet",
                        "properties": {
                            "addressPrefix": "10.100.20.0/24"
                        }
                    },
                    {
                        "name": "dmz1subnet",
                        "properties": {
                            "addressPrefix": "10.100.254.0/24"
                        }
                    }
                ],
                "virtualNetworkPeerings": []
            },
            "dependsOn": []
        },

{% for load_balancer_type, load_balancer_spec in azure_lb.items() %}

{% if load_balancer_spec.public_ip %}

        {
            "name": "{{ load_balancer_type }}pip",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2017-08-01",
            "location": "{{ azure_location }}",
            "properties": {
                "publicIpAllocationMethod": "Static"
            },
            "sku": {
                "name": "Basic"
            }
        },

{% endif %}

        {
          "apiVersion": "2015-05-01-preview",
          "name": "{{ load_balancer_type }}",
          "type": "Microsoft.Network/loadBalancers",
          "location": "{{ azure_location }}",
          "dependsOn": [
{% if load_balancer_spec.public_ip %}
            "Microsoft.Network/publicIpAddresses/{{ load_balancer_type }}pip",
{% endif %}
            "Microsoft.Network/virtualNetworks/main"
          ],
          "properties": {
            "frontendIPConfigurations": [
              {
                "name": "{{ load_balancer_type }}FrontEnd",
                "properties": {
{% if not load_balancer_spec.public_ip %}
                  "privateIPAllocationMethod": "Static",
                  "privateIpAddress": "{{ load_balancer_spec.private_ip }}",
                  "subnet": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets/', 'main', '{{ load_balancer_spec.subnet }}')]"
                  }
{% else %}
                  "publicIPAddress": {
                    "id": "[resourceId('Microsoft.Network/publicIpAddresses', '{{ load_balancer_type }}pip')]"
                  }
{% endif %}
                }
              }
            ],
            "backendAddressPools": [
              {
                "name": "{{ load_balancer_type }}BackendPool"
              }
            ],
            "inboundNatRules": [
            ],
            "loadBalancingRules": [
{% for port_spec in load_balancer_spec.ports %}
              {
                "name": "LBRule{{ loop.index }}",
                "properties": {
                  "frontendIPConfiguration": {
                    "id": "[concat(resourceId('Microsoft.Network/loadBalancers', '{{ load_balancer_type }}'), '/frontendIPConfigurations/{{ load_balancer_type }}FrontEnd')]"
                  },
                  "backendAddressPool": {
                    "id": "[concat(resourceId('Microsoft.Network/loadBalancers', '{{ load_balancer_type }}'), '/backendAddressPools/{{ load_balancer_type }}BackendPool')]"
                  },
                  "protocol": "{{ port_spec.protocol }}",
                  "frontendPort": {{ port_spec.frontend }},
                  "backendPort": {{ port_spec.backend }},
                  "enableFloatingIP": false,
{% if port_spec.probe %}
                  "probe": {
                    "id": "[concat(resourceId('Microsoft.Network/loadBalancers', '{{ load_balancer_type }}'), '/probes/{{ port_spec.probe }}')]"
                  },
{% endif %}
                  "idleTimeoutInMinutes": 5
                }
              }{% if not loop.last %},{% endif %}
{% endfor %}
            ],
            "probes": [
{% for probe_spec in load_balancer_spec.probes %}
              {
                "name": "{{ probe_spec.name }}",
                "properties": {
                  "protocol": "{{ probe_spec.protocol }}",
                  "port": {{ probe_spec.port }},
                  "intervalInSeconds": 5,
                  "numberOfProbes": 2
                }
              }{% if not loop.last %},{% endif %}
{% endfor %}
            ]
          }
        },

{% endfor %}

{% for machine_type, machine_spec in azure_machine_spec.items() %}

        {
            "name": "{{ machine_type }}nsg",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2017-06-01",
            "location": "{{ azure_location }}",
            "properties": {
                "securityRules": {{ azure_nsg[machine_type] | to_nice_json(indent=4) }}
            }
        },

        {
          "type": "Microsoft.Compute/availabilitySets",
          "name": "{{ machine_type }}AS",
          "apiVersion": "2016-04-30-preview",
          "location": "{{ azure_location }}",
          "properties": {
            "platformFaultDomainCount": "2",
            "platformUpdateDomainCount": "2",
            "managed": "true"
          }
        },

{% for instance in machine_spec.instances %}

{% for interface in instance.interfaces %}

{% if interface.public_ip %}
        {
            "name": "{{ instance.hostname }}pip{{ loop.index }}",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2017-08-01",
            "location": "{{ azure_location }}",
            "properties": {
                "publicIpAllocationMethod": "Static"
            },
            "sku": {
                "name": "Basic"
            }
        },
{% endif %}

        {
            "name": "{{ instance.hostname }}nic{{ loop.index }}",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2016-09-01",
            "location": "{{ azure_location }}",
            "dependsOn": [
{% if 'load_balancer' in machine_spec and loop.first %}
                "Microsoft.Network/loadBalancers/{{ machine_spec.load_balancer }}",
{% endif %}
                "Microsoft.Network/virtualNetworks/main",
{% if interface.public_ip %}
                "Microsoft.Network/publicIpAddresses/{{ instance.hostname }}pip{{ loop.index }}",
{% endif %}
                "Microsoft.Network/networkSecurityGroups/{{ machine_type }}nsg"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig{{ loop.index }}",
                        "properties": {
{% if 'load_balancer' in machine_spec and loop.first %}
                            "loadBalancerBackendAddressPools": [
                              {
                                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', '{{ machine_spec.load_balancer }}'), '/backendAddressPools/{{ machine_spec.load_balancer }}BackendPool')]"
                              }
                            ],
{% endif %}
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets/', 'main', '{{ interface.subnet }}')]"
                            },
                            "privateIPAllocationMethod": "Static",
{% if interface.public_ip %}
                            "publicIpAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIpAddresses', '{{ instance.hostname }}pip{{ loop.index }}')]"
                            },
{% endif %}
                            "privateIpAddress": "{{ interface.ipv4 }}"
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', '{{ machine_type }}nsg')]"
                }
            }
        },

{% endfor %}

        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "{{ instance.hostname }}",
            "apiVersion": "2016-04-30-preview",
            "location": "{{ azure_location }}",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "{{ machine_spec.size }}"
                },
                "osProfile": {
                    "computerName": "{{ instance.hostname }}",
                    "adminUsername": "cloud-user",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": {{ azure_ssh_keys | to_nice_json(indent=4) }}
                        }
                    },
                    "secrets": []
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "FromImage",
                        "caching": "ReadOnly",
                        "managedDisk": {
                            "storageAccountType": "Standard_LRS"
                        }
                    },
                    "imageReference": {{ azure_os_choices[machine_spec.os] | to_nice_json(indent=4) }},
                    "dataDisks": [
                        {
                            "lun": 0,
                            "createOption": "Empty",
                            "caching": "ReadWrite",
                            "managedDisk": {
                                "storageAccountType": "Standard_LRS"
                            },
                            "diskSizeGB": {{ machine_spec.disk_size_gb }}
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
{%for interface in instance.interfaces %}
                        {
                            "properties": {
                              "primary": {% if loop.index == 1 %}true{% else %}false{% endif %}
                            },
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', '{{ instance.hostname }}nic{{ loop.index }}')]"
                        }{% if not loop.last %},{% endif %}
{% endfor %}
                    ]
                },
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets', '{{ machine_type }}AS')]"
                }
            },
            "dependsOn": [
                "Microsoft.Compute/availabilitySets/{{ machine_type }}AS",
{% for interface in instance.interfaces %}
                "[resourceId('Microsoft.Network/networkInterfaces', '{{ instance.hostname }}nic{{ loop.index }}')]"{% if not loop.last %},{% endif %}
{% endfor %}
            ]
        }{% if not loop.last %},{% endif %}

{% endfor %}
{% if not loop.last %},{% endif %}
{% endfor %}
    ]
}